<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailFragment">

    <Button
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/arrow___right_circle"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/bg_topDetail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageViewBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rectangle_15_2" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:background="@color/white"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="80dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/introText"
                                        android:layout_width="250dp"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text="@string/IntroDetail1"
                                        android:textColor="@color/teal_200"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        tools:ignore="TextSizeCheck" />

                                    <Button
                                        android:layout_marginTop="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:background="@drawable/button_border"
                                        android:text="@string/Follow"
                                        android:textColor="@color/white"
                                        android:textAllCaps="false"
                                        tools:ignore="TouchTargetSizeCheck" />
                                </LinearLayout>

                                <Button
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="right"
                                    android:layout_marginStart="60dp"
                                    android:background="@drawable/component_11"
                                    tools:ignore="SpeakableTextPresentCheck" />

                            </LinearLayout>
                            <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Phobien"
                                android:textColor="@color/teal_200"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/detailList1"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


</FrameLayout>